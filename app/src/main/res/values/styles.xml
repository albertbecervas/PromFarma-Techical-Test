<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textAppearance">@style/PfTextViewStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="PfTextViewStyle" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/raleway</item>
        <item name="android:fontFeatureSettings">lnum</item>
    </style>

    <style name="CustomRatingBar" parent="Base.Widget.AppCompat.RatingBar.Small">
        <item name="android:numStars">1</item>
        <item name="android:stepSize">1</item>
        <item name="android:rating">1</item>
    </style>

</resources>
